= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :project
    = f.text_field :project
  .field
    = f.label :creator
    = f.text_field :creator
  .field
    = f.label :assignee
    = f.text_field :assignee
  .actions
    = f.submit 'Save'
