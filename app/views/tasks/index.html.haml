%h1 Listing tasks

%table
  %thead
    %tr
      %th Name
      %th Project
      %th Creator
      %th Assignee
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.name
        %td= task.project
        %td= task.creator
        %td= task.assignee
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Task', new_project_task_path(@project)
